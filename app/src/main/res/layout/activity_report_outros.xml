<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReportOutrosActivity">

    <RelativeLayout
        android:id="@+id/relativo"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageViewReportOutros"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="20dp"
            android:padding="8dp"
            android:scaleType="centerCrop"
            android:cropToPadding="true"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tituloReportOutros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageViewReportOutros"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:text="Titulo" />

        <EditText
            android:id="@+id/tituloReportOutrosEdit"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tituloReportOutros"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/descricaoReportOutros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tituloReportOutrosEdit"
            android:text="Descrição"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"/>

        <EditText
            android:id="@+id/descricaoReportOutrosEdit"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/descricaoReportOutros"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/tipoReportOutros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/descricaoReportOutrosEdit"
            android:text="Tipo"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"/>

        <EditText
            android:id="@+id/tipoReportOutrosEdit"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tipoReportOutros"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/moradaReportOutros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:text="Morada"
            android:layout_below="@id/tipoReportOutrosEdit"/>

        <EditText
            android:id="@+id/moradaReportOutrosEdit"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/moradaReportOutros"
            android:layout_marginTop="15dp"
            android:editable="false"
            android:layout_marginLeft="20dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/moradaReportOutrosEdit"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="-13dp"
            android:orientation="horizontal">
        </LinearLayout>
    </RelativeLayout>
</ScrollView>